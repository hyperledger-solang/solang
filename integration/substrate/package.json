    "@types/node": "^14.14.10",
    "expect": "^26.6.2",
    "jest": "^29.4.1",
    "mocha": "^9.1.0",
    "ts-jest": "^29.0.5",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.7"
  },
  "dependencies": {
    "@polkadot/api": "^9.9",
    "@polkadot/api-contract": "^9.9",
